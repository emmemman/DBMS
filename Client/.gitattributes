# Default: treat text files as text, normalize to LF
* text=auto

# TypeScript & JavaScript
*.ts    text eol=lf
*.tsx   text eol=lf
*.js    text eol=lf
*.jsx   text eol=lf

# Config & metadata files
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.env   text eol=lf
*.md    text eol=lf
*.html  text eol=lf
*.css   text eol=lf
*.scss  text eol=lf

# Shell scripts (LF), Windows scripts (CRLF)
*.sh    text eol=lf
*.bat   text eol=crlf
*.cmd   text eol=crlf

# Ignore binary files
*.png   binary
*.jpg   binary
*.jpeg  binary
*.gif   binary
*.ico   binary
*.pdf   binary
*.zip   binary
*.gz    binary
*.exe   binary
*.dll   binary

# Lock files (keep as-is)
package-lock.json text eol=lf
yarn.lock         text eol=lf
pnpm-lock.yaml    text eol=lf
